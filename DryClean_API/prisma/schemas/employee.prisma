model Employee {
    id           Int     @id @default(autoincrement())
    name         String
    surname      String
    employeeCode String
    jobTitle     String
    email        String
    mobilePhone  String
    address      String
    postalCode   String
    city         String
    province     String
    notes        String?
    shop         Shop    @relation("ShopEmployee", fields: [shopId], references: [id])
    shopId       Int
}

model Shop {
    id        Int        @id @default(autoincrement())
    employees Employee[] @relation("ShopEmployee")
}
